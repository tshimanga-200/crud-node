<div class="row">
    <div class="col-lg-offset-3 col-lg-6">
        <div class="panel panel-primary">
    <div class="panel-heading">
        <h4>{{viewTitle}}</h4>
    </div>
    <div class="panel-body">
        <form action="/student/updateStudent" method="POST" autocomplete="off">
         <input type="text" name="_id" class="form-control" value="{{student._id}}">
            <div class="form-group">
                <label for="nom">NOM</label>
                <input type="text" name="nom" class="form-control" value="{{student.nom}}">
            </div>
            <div class="form-group">
                <label for="prenom">PRENOM</label>
                <input type="text" name="prenom" class="form-control" value="{{student.prenom}}">
            </div>
            <div class="form-group">
                <label for="age">AGE</label>
                <input type="text" name="age" class="form-control" value="{{student.age}}">
            </div>
            
            <div class="form-group">
                <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-ok-sign" style="color:#4f4;"></span>MODIFIER</button>
            </div>
        </form>
    </div>
</div>
