<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>{{viewTitle}}</h4>
            </div>
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <td>NOM</td>
                            <td>PRENOM</td>
                            <td>AGE</td>
                            <td>ACTION</td>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each list}}
                        <tr>
                            <td>{{this.nom}}</td>
                            <td>{{this.prenom}}</td>
                            <td>{{this.age}}</td>
                            <td>
                                <a href="/student/delete/{{this._id}}" class="btn btn-primary">SUPPRIMER</a>
                                <a href="/student/{{this._id}}" class="btn btn-primary">MODIFIER</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                 <div>
                   <a class="btn btn-primary" href="/student">Ajouter</a>
                 </div>
            </div>
        </div>
    </div>
</div>